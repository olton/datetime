{
  "name": "@olton/datetime",
  "version": "0.2.3",
  "description": "Datetime is a minimalist JavaScript library that parses, validates, manipulates, and displays dates and times for node and modern browsers with a comfortable modern API.",
  "main": "src/index.js",
  "source": "src/index.js",
  "type": "module",
  "scripts": {
    "prebuild": "shx rm -rf dist/* lib/*",
    "build": "rollup --config",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/olton/datetime.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/olton"
  },
  "keywords": [
    "date",
    "time",
    "datetime",
    "javascript",
    "library"
  ],
  "bugs": {
    "url": "https://github.com/olton/datetime/issues"
  },
  "author": "Serhii Pimenov <serhii@pimenov.com.ua> (https://pimenov.com.ua/)",
  "license": "MIT",
  "browserslist": [
    "last 2 versions",
    "not ie >= 0",
    "not ie_mob >= 0",
    "not op_mini all",
    "not op_mob >= 0",
    "not kaios >= 0",
    "not samsung >= 0",
    "not baidu >= 0",
    "not bb >= 0",
    "maintained node versions"
  ],
  "devDependencies": {
    "@babel/cli": "^7.18.9",
    "@babel/core": "^7.18.9",
    "@babel/plugin-proposal-throw-expressions": "^7.18.6",
    "@babel/preset-env": "^7.18.9",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "chai": "^4.3.6",
    "glob": "^8.0.3",
    "jest": "^28.1.3",
    "rollup": "^2.77.2",
    "rollup-plugin-terser": "^7.0.2",
    "shx": "^0.3.4"
  }
}
